<div class="wrapper">
    <div id="content" style="padding:0px;" style="z-index: -1;">
        <div id="drawingboard">
            <canvas id="canvas">Your browserdoes not support HTML5 canvas</canvas><br>
            <button id="selectBtn" class="btn btn-secondary"><i class=" fas fa-mouse-pointer"></i></button>
            <button id="pen" class="btn btn-secondary"><i class="fas fa-pen"></i></button>
            <button id="eraser" class="btn btn-secondary"><i class="fas fa-eraser"></i></button>
            <button id="newBoard" class="btn btn-primary">New Board</button>
            <button id="clearDrawings" class="btn btn-primary">Clear</button>
            <button id="saveDrawings" class="btn btn-primary">Save</button>
            <div style="display: inline-block;">
                <label id="penText" class="givemargin">Pen size : </label>
                <input type="range" id="penSize" min="1" max="20" step="1" value="8" class="givemargin">
            </div>
            <div style="display: inline-block;">

                <label id="eraseText" class="givemargin">Eraser Size : </label>
                <input type="range" id="eraserSize" min="5" max="60" step="5" value="20" class="givemargin">
            </div>
            <div style="display: inline-block;">
                <label id="colorText" class="givemargin">Color : </label>
                <input type="color" id="color-picker" class="givemargin">
            </div>
        </div>
    </div>
    <nav id="sidebar1" class="roominfo">
        <div class="sidebar-header">
            <h4>Room Info</h4>
